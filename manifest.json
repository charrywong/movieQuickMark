{
  "name": "豆瓣一键看过",
  "manifest_version": 3,
  "version": "1.0.1",
  "description": "用于在豆瓣网站中快速标记电影为已看过",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png"
    },
    "default_title": "豆瓣一键看过"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://movie.douban.com/*",
        "https://search.douban.com/movie/*"
      ],
      "css": ["style.css"],
      "js": [
        "content-script.js"
      ]
    }
  ]
}